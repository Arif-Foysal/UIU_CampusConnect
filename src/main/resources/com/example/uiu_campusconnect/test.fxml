<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Messages" />
        <Region HBox.hgrow="ALWAYS" />
        <Button style="-fx-background-color: #3E9B82; -fx-text-fill: white;" text="+ New Chat" />
        <Button style="-fx-background-color: transparent;" text="Report chat" />
        <MenuButton text="..." />
    </HBox>

    <!-- Main Content -->
    <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">
        <!-- Left Sidebar -->
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- Search Box -->
            <TextField promptText="Find Messages" style="-fx-background-radius: 20;" />

            <!-- Chat List -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">

                        </VBox>
                    </HBox>

                    <HBox spacing="10" style="-fx-padding: 10; -fx-background-radius: 5;">
                        <ImageView fitHeight="40" fitWidth="40">
                            <image>
                                <Image url="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot%202025-01-21%20at%207.48.25%E2%80%AFPM-HhHgJUsWhIpXK5PwitXN4CzaHOhivq.png" />
                            </image>
                        </ImageView>
                        <VBox>
                            <Label style="-fx-font-weight: bold;" text="Henna" />
                            <Label style="-fx-text-fill: #666;" text="You:Thifaslkfjaslkjf • 11:33pm" />
                        </VBox>
                    </HBox>

                    <HBox spacing="10" style="-fx-padding: 10; -fx-background-radius: 5;">
                        <ImageView fitHeight="40" fitWidth="40">
                            <image>
                                <Image url="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot%202025-01-21%20at%207.48.25%E2%80%AFPM-HhHgJUsWhIpXK5PwitXN4CzaHOhivq.png" />
                            </image>
                        </ImageView>
                        <VBox>
                            <Label style="-fx-font-weight: bold;" text="Jack" />
                            <Label style="-fx-text-fill: #666;" text="lkjhfkjshda • 12:43pm" />
                        </VBox>
                    </HBox>
                </VBox>
            </ScrollPane>
        </VBox>

        <!-- Right Chat Area -->
        <VBox>
            <!-- Chat Messages -->
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <HBox alignment="CENTER_LEFT">
                        <Label style="-fx-background-color: #f0f0f0;                                -fx-padding: 10; -fx-background-radius: 15;" text="hi" />
                    </HBox>
                    <HBox alignment="CENTER_RIGHT">
                        <Label style="-fx-background-color: #4169E1; -fx-text-fill: white;                                -fx-padding: 10; -fx-background-radius: 15;" text="i want to book your place" />
                    </HBox>
                    <HBox alignment="CENTER_RIGHT">
                        <Label style="-fx-background-color: #4169E1; -fx-text-fill: white;                                -fx-padding: 10; -fx-background-radius: 15;" text="sure." />
                    </HBox>
                </VBox>
            </ScrollPane>

            <!-- Message Input Area -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                <Button style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20">
                            <image>
                                <Image url="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot%202025-01-21%20at%207.48.25%E2%80%AFPM-HhHgJUsWhIpXK5PwitXN4CzaHOhivq.png" />
                            </image>

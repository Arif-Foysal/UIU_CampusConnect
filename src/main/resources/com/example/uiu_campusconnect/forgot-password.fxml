<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxWidth="450.0" prefHeight="488.0" prefWidth="450.0" spacing="15" styleClass="card" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>
    <Label text="UIU Campus Connect" textFill="#e38b07">
        <font>
            <Font name="Comic Sans MS Bold" size="20.0" />
        </font>
    </Label>

    <Label styleClass="title" text="Reset Password">
        <font>
            <Font name="Comic Sans MS Bold" size="26.0" />
        </font>
    </Label>

    <VBox spacing="5">
        <Label styleClass="input-label" text="Email">
            <font>
                <Font name="Comic Sans MS Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="emailField" prefHeight="33.0" prefWidth="370.0" styleClass="input-field" />
    </VBox>

    <VBox spacing="5">
        <Label styleClass="input-label" text="New Password">
            <font>
                <Font name="Comic Sans MS Bold" size="14.0" />
            </font>
        </Label>
        <PasswordField fx:id="newPasswordField" prefHeight="32.0" prefWidth="370.0" styleClass="input-field" />
    </VBox>

    <VBox spacing="5">
        <Label styleClass="input-label" text="Confirm New Password">
            <font>
                <Font name="Comic Sans MS Bold" size="14.0" />
            </font>
        </Label>
        <PasswordField fx:id="confirmPasswordField" prefHeight="32.0" prefWidth="370.0" styleClass="input-field" />
    </VBox>

    <Button prefHeight="58.0" prefWidth="150.0" styleClass="action-button" text="Reset Password">
        <font>
            <Font name="Comic Sans MS Bold" size="16.0" />
        </font>
    </Button>

    <Button prefHeight="59.0" prefWidth="150.0" styleClass="action-button" text="Back to Login">
        <font>
            <Font name="Comic Sans MS Bold" size="16.0" />
        </font>
    </Button>
</VBox>
